<Page x:Class="Bookmaster34.View.Pages.BrowseCatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bookmaster34.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1004" d:DesignWidth="1920"
      Title="Просмотр книг">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Панель поиска -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Image Grid.ColumnSpan="3" Source="/Resources/logo.png" />

            <TextBlock Grid.Row="2" Text="Название:"/>
            <TextBox Grid.Row="2" Grid.Column="2"/>

            <TextBlock Grid.Row="4" Text="Авторы:"/>
            <TextBox Grid.Row="4" Grid.Column="2"/>
            
            <TextBlock Grid.Row="6" Text="Жанры:"/>
            <TextBox Grid.Row="6" Grid.Column="2"/>

            <Button Name="SearchBtn" Grid.Row="8" Grid.Column="2" Content="Поиск" Click="SearchBtn_Click"/>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            
            <!-- Результат поиска -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <ListView Name="BookAuthorsLv">
                    
                </ListView>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Страница"/>
                    
                    <Button Name="PreviousPageBtn" Content="&lt;" Grid.Column="2"  Click="PreviousPageBtn_Click"/>
                    
                    <TextBox Name="CurrentPageTb" Grid.Column="4"/>

                    <Button Name="NextPageBtn" Content="&gt;" Grid.Column="6" Click="NextPageBtn_Click"/>
                    
                    <TextBlock Name="TotalPagesTbl" Grid.Column="8" Text="из 4"/>
                    
                    <TextBlock Name="TotalBooksTbl" Grid.Column="12" Text="153 книги найдено"/>
                </Grid>
            </Grid>
            <!-- Изменение размеров гридов -->
            
            <!-- Информация о выбранной книге -->
            
        </Grid>
    </Grid>
</Page>
